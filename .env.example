# Database
DATABASE_URL=./data/registry.db

# Auth
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
SESSION_EXPIRY_DAYS=7

# WebAuthn/Passkey Configuration
# For local development
NEXT_PUBLIC_APP_NAME="Aithen Registry Hub"
NEXT_PUBLIC_RP_ID="localhost"
NEXT_PUBLIC_ORIGIN="http://localhost:3000"

# For production, update these values:
# NEXT_PUBLIC_RP_ID="yourdomain.com"
# NEXT_PUBLIC_ORIGIN="https://yourdomain.com"

# Docker Registry Configuration
REGISTRY_URL=http://localhost:5000
REGISTRY_PORT=5000
REGISTRY_SERVICE_NAME=aithen-registry
REGISTRY_TOKEN_ISSUER=aithen-auth
REGISTRY_TOKEN_EXPIRY=300

# Token authentication certificates (auto-generated if not present)
# Certificates are generated automatically in ./certs/ on first use
REGISTRY_PRIVATE_KEY_PATH=./certs/registry.key
REGISTRY_PUBLIC_CERT_PATH=./certs/registry.crt

# Registry auth realm (token service endpoint)
REGISTRY_AUTH_REALM=http://localhost:3000/api/registry/token
